        <td><%= user.address %></td>
        <td><%= user.bio %></td>
        <td><%= user.occupation %></td>
        <td><%= user.expertise %></td>
        <td><%= user.admin %></td>
        <td><%= user.mentor %></td>
        <td><%= link_to 'Show', users_path %></td>
